- stash(
-   title => l('[_1]: Online Trading platform for binary options on Forex, Indices, Commodities and Smart Indices',stash('broker_name')),
-   next_link => '/why-us',
-   createacc => l('Create free account'),
- );
- my $lang = stash->{language};

#banner
  .grd-container
    .grd-grid-9.grd-row-padding.grd-hide-mobile.grd-hide-phablet
      #slider
        .slides-container
          #slide-1.slides.invisibleslides
            %h1.dark= l('The premier platform for binary options trading')
            %p= l('Discover the easiest way to get started in the financial markets.')
            %h4
              %a.learn-more.pjaxload{:href => url_for('/why-us')}= l('Learn More')
          #slide-2.slides.invisibleslides
            %h1.dark= l('Best-in-class pricing for binaries...')
            %p= l('Our exclusive pricing technology gives you the best possible opportunity to make your money work for you.')
            %h4
              %a.learn-more.pjaxload{:href => url_for('/why-us')}= l('Learn More')
          #slide-3.slides.invisibleslides
            %h1.dark= l('10 seconds to 365 days...')
            %p= l('$1 to $100,000 payouts, low-risk to high-leverage, and much more. We offer limitless profit opportunities.')
            %h4
              %a.learn-more.pjaxload{:href => url_for('/why-us')}= l('Learn More')
          #slide-4.slides.invisibleslides
            %h1.dark= l('Technology leader with more than 10 years experience...')
            %p= l('Trade with confidence with the industry pioneer.')
            %h4
              %a.learn-more.pjaxload{:href => url_for('/why-us')}= l('Learn More')
          #slide-5.slides.invisibleslides
            %h1.dark= l('Novice or Expert...')
            %p= l('With payouts from $1 to $100,000, we have you covered.')
            %h4
              %a.learn-more.pjaxload{:href => url_for('/why-us')}= l('Learn More')
        %ul.slides-pagination
          %li.current
            %a{:href => "#0"}
              != "&nbsp;"
          %li
            %a{:href => "#1"}
              != "&nbsp;"
          %li
            %a{:href => "#2"}
              != "&nbsp;"
          %li
            %a{:href => "#3"}
              != "&nbsp;"
          %li
            %a{:href => "#4"}
              != "&nbsp;"
    .grd-grid-3.grd-grid-mobile-12.grd-grid-phablet-12.grd-parent
      #open-account.grd-grid-12
        %p= l('Get your free $10k virtual money account')
        %form#virtual-acc-form{ :name => 'oppAccForm', :action => url_for('create_account.cgi'), :method => 'post' }
          %span#virtual-fields
            %span.acc-input
              %label.grd-grid-5{:for => 'Email'}= l('Your Email:')
              %span.grd-grid-7.grd-no-gutter
                %input{:name => 'Email', :id => 'Email', :type => 'email', :required => true}
            %span.acc-input
              %label.grd-grid-5{:for => 'residence'}= l('Country:')
              %span.grd-grid-7.grd-no-gutter
                %select#residence{:name => 'residence'}
                  %option{:value=>'default'}= l('Select Country')
                  - foreach my $country (countries_options()) {
                    - my ($country_code, $country_name) = ($country->{code}, $country->{name});
                    - if($country->{restricted}) {
                      %option{:value => $country_code, :disabled => 1}= $country_name
                    - } else {
                      %option{:value => $country_code}= $country_name
                    - }
                  - }
            %span.acc-input
              %label.grd-grid-5{:for => 'chooseapassword'}= l('Password:')
              %span.grd-grid-7.grd-no-gutter
                %input#chooseapassword{:name => 'chooseapassword', :type => 'password', :maxlength => '25', :required => true}
          %input#actype{:type => 'hidden', :name => 'actype', :value => 'virtual'}
          %input{:type => 'hidden', :name => 'l', :value => $lang}
          %input.button{:id => 'btn_registration',:type => 'submit', :value => stash('createacc')}
      .grd-with-padding.grd-grid-6.grd-hide-mobile.grd-hide-phablet
        %img.responsive{:src => url_for('images/pages/why-us/why-us-proven-record_1.svg')}
      .grd-with-padding.grd-grid-6.grd-hide-mobile.grd-hide-phablet
        %img.responsive{:src => url_for('images/pages/why-us/why-us-GBAF-award-2012.svg')}
#help
